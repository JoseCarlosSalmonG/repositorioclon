<%= simple_form_for @local, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@local[:name]) %>
  <%= f.input :latitude %>
  <%= error_span(@local[:latitude]) %>
  <%= f.input :longitude %>
  <%= error_span(@local[:longitude]) %>
  <%= f.input :address %>
  <%= error_span(@local[:address]) %>
  <%= f.input :city_id %>
  <%= error_span(@local[:city_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                locals_path, :class => 'btn btn-default' %>
<% end %>
