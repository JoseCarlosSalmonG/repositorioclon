<%= simple_form_for @course, :html => { class: 'form-horizontal', multipart: true } do |f| %>
  <%= f.input :name %>
  <%= error_span(@course[:name]) %>
  <%= f.input :price %>
  <%= error_span(@course[:price]) %>
  <%= f.input :stock %>
  <%= error_span(@course[:stock]) %>
  <%= f.input :picture, as: :file %>
  <%= error_span(@course[:picture]) %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                courses_path, :class => 'btn btn-default' %>
<% end %>
