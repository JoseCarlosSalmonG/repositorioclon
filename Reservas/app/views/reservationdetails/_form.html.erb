<%= simple_form_for [@reservation,@reservationdetail], :html => { :class => 'form-horizontal' } do |f| %>
  
  <%= f.input :reservation_id %>
  <%= error_span(@reservationdetail[:reservation_id]) %>
  <%= f.association :entree %>
  <%= error_span(@reservationdetail[:entree_id]) %>
  <%= f.input :quantityentree %>
  <%= error_span(@reservationdetail[:quantityentree]) %>
  <%= f.association :course %>
  <%= error_span(@reservationdetail[:course_id]) %>
  <%= f.input :quantitycourse %>
  <%= error_span(@reservationdetail[:quantitycourse]) %>
  
  
  

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reservation_reservationdetails_path, :class => 'btn btn-default' %>
<% end %>
