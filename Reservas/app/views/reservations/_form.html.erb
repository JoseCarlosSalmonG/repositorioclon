<%= simple_form_for @reservation, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :date %>
  <%= error_span(@reservation[:date]) %>
  <%= f.input :address %>
  <%= error_span(@reservation[:address]) %>
  <%= f.input :local_id %>
  <%= error_span(@reservation[:local_id]) %>
  <%= f.input :payment_id %>
  <%= error_span(@reservation[:payment_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reservations_path, :class => 'btn btn-default' %>
<% end %>
