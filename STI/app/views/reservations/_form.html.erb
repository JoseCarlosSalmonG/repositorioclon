<%= simple_form_for(@reservation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date %>
    <%= f.input :address %>
    <%= f.association :customer %>
    <%= f.association :local %>
    <%= f.association :payment %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
